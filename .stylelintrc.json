{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "else",
          "each",
          "include",
          "mixin",
          "return",
          "error"
        ]
      }
    ],
    "rule-empty-line-before": "never",
    "block-no-empty": null,
    "declaration-colon-newline-after": null,
    "order/order": [
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "^((?!breakpoint).)*$"
      },
      "declarations"
    ]
  }
}
